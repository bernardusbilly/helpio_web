		<div class="modal fade" id="signup">
			<div class="modal-dialog modal-md">
				<div class="modal-content">
					<div class="container-fluid">
						<div class="row">
							<div class="hidden-xs hidden-sm col-md-5 col-lg-5">
								<div class="row">
									<div class="wrapper-signup">
										<%= image_tag "stock/signup.jpg", :class => "signup-image"%>
									</div>
								</div>
							</div>
							<div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
								<div class="row">
									<div class="modal-body">
										<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
										<div>
											<%= image_tag "logo/helpio.png", :class => "helpio-logo"%><br>
											<div class="h3">The best is yet to come, join us today!</div>
										</div>
										<hr></hr>
										<div class="signup-option">
											<%= link_to '/auth/facebook' do%>
											<div class="button-facebook">
												<%= image_tag "logo/facebook.png", :class => "facebook"%>
												Sign up with Facebook
											</div>
											<% end %>
											<%= link_to '/auth/google_oauth2' do%>
											<div class="button-google">
												<%= image_tag "logo/google.png", :class => "google"%>
												Sign up with Google
											</div>
											<% end %>
											<div id="signup-email" class="button-email">
												<div class="email"><span class="fa fa-envelope-o"></span></div>Sign up with Email
											</div>
											<div class="agreement">
												By signing up you indicate that you have read  
												<a href="#">Terms of Service and Privacy Policy</span>
											</div>
											Have an account? <a href="#">Log in</a>
										</div>
										<%= form_for(:user, :html => {:id => "signup"}, url: registration_path(:user)) do |f| %>
											<%= image_tag "icon/back-button.png", :class => "back-button-signup"%>
											<div class="row">
												<div class="text-left col-md-5">
													Full Name:<br>
													Email:<br>
													Password: <div class="password-requirement italic">(8 characters minimum)</div><br>
													Confirm Password:<br>
													Gender:<br>
													Date of Birth:<br>
												</div>
												<div class="col-md-7">
													<%= f.text_field :nickname, required: true%><br>
													<%= f.email_field :email, required: true%><br>
													<%= f.password_field :password, autocomplete: "off", required: true, :pattern => ".{8,20}", :title => "8 to 16 characters", :class => "password-checking" %><br>
													<%= f.password_field :password_confirmation, autocomplete: "off", required: true, :class => "confirm-password" %><br />
													<%= f.select :gender, ['Male', 'Female'] %><br>
													<%= f.date_field :birthday, required: true%><br>
												</div>
											</div>
											<%= f.submit "Sign up", :class => "submit" %>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
